<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/main_site"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="E-mail"/>

    <EditText
            android:id="@+id/main_blog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/main_site"
            app:layout_constraintStart_toStartOf="@+id/main_site"
            app:layout_constraintEnd_toEndOf="@+id/main_site"
            android:layout_marginTop="8dp"
            android:hint="Blog"/>

    <Button
            android:id="@+id/main_enviar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/main_blog"
            app:layout_constraintStart_toStartOf="@+id/main_blog"
            app:layout_constraintEnd_toEndOf="@+id/main_blog"
            android:layout_marginTop="8dp"
            android:text="Enviar"/>

</androidx.constraintlayout.widget.ConstraintLayout>